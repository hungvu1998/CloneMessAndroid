<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/cPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnGallary"
        android:padding="30dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_photo_size_select_actual_blue_24dp"
        android:layout_alignParentLeft="true" />
    <ImageView
        android:layout_width="100dp"
        android:id="@+id/btnCam"
        android:layout_toRightOf="@id/btnGallary"
        android:layout_toLeftOf="@id/btnSwitch"
        android:layout_alignTop="@id/btnGallary"
        android:src="@drawable/ic_check_circle_blue_24dp"
        android:layout_height="100dp"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_alignTop="@id/btnGallary"
        android:padding="30dp"
        android:src="@drawable/ic_photo_camera_blue_24dp"
        android:id="@+id/btnSwitch"
        android:layout_height="100dp"
        android:layout_alignParentRight="true" />

</RelativeLayout>