<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView

            android:id="@+id/img_background"
            android:layout_width="match_parent"
            android:src="@drawable/image_profile"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"/>
        <FrameLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/subscriber_container" />


        <LinearLayout
            android:layout_width="match_parent"
            android:padding="30dp"
            android:id="@+id/layout_pending"
            android:orientation="vertical"
            android:background="#9CBDB5B5"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp">
                <LinearLayout
                    android:background="@drawable/border_ic_call"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:id="@+id/imgCamera"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_comment_white" />
            </FrameLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:id="@+id/imgAvatar"
                android:layout_marginTop="50dp"
                android:src="@drawable/image_profile"
                android:layout_gravity="center"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:text="HuyDV"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:textSize="16dp"
                android:text="Đang liên hệ ......"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:padding="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:background="@drawable/border_ic_call"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_volume_up_white_24dp" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:background="@drawable/border_ic_call"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_keyboard_voice_white_24dp" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:background="@drawable/border_ic_call_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_local_phone_black_24dp" />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>
        <FrameLayout
            android:visibility="gone"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:id="@+id/publisher_container"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:padding="2dp"
            android:background="#FFFFFF" />
    </FrameLayout>


</FrameLayout>
